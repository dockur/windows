{
  "name": "Windows 10 LTSC",
  "service": "windows",
  "containerEnv": {
    "VERSION": "10l",
    "RAM_SIZE": "max",
    "DISK_SIZE": "max",
    "CPU_CORES": "max"    
  },  
  "forwardPorts": [8006],  
  "portsAttributes": {
    "8006": {
      "label": "Web",
      "onAutoForward": "openBrowser"
    }
  },
  "otherPortsAttributes": {
    "onAutoForward": "silent"
  }, 
  "hostRequirements": {
    "storage": "64gb"
  },  
  "dockerComposeFile": "../codespaces.yml"
}
